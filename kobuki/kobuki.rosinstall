##############################################################################
#
# Kobuki ROS install file. 
#
# Before rosinstalling, make sure you install all the rosdeps. Roughly this includes
#
# System:
#   libftdi, libusb
#
# Ros:
#   common_msgs, ecl, tf, nodelet, robot-state-publisher, diagnostics, dynamic-reconfigure, pcl
#
##############################################################################

# Kobuki / Yujin stacks

- git: {local-name: yocs_msgs, version: indigo, uri: 'https://github.com/yujinrobot/yocs_msgs.git'}
- git: {local-name: yujin_ocs, version: indigo, uri: 'https://github.com/yujinrobot/yujin_ocs.git'}
- git: {local-name: kobuki_msgs, version: indigo, uri: 'https://github.com/yujinrobot/kobuki_msgs.git'}
- git: {local-name: kobuki_core, version: indigo, uri: 'https://github.com/yujinrobot/kobuki_core.git'}
- git: {local-name: kobuki, version: indigo, uri: 'https://github.com/yujinrobot/kobuki.git'}

# Development stacks
- git: {local-name: capabilities, version: master, uri: 'https://github.com/osrf/capabilities.git'}
- git: {local-name: std_capabilities, version: master, uri: 'https://github.com/osrf/std_capabilities.git'}
- git: {local-name: rocon_msgs, version: indigo, uri: 'https://github.com/robotics-in-concert/rocon_msgs.git'}
- git: {local-name: rocon_tools, version: indigo, uri: 'https://github.com/robotics-in-concert/rocon_tools.git'}
- git: {local-name: rocon_app_platform, version: indigo, uri: 'https://github.com/robotics-in-concert/rocon_app_platform.git'}
